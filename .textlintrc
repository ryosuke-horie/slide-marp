{
  "rules": {
    "preset-ja-technical-writing": {
      "sentence-length": {
        "max": 120
      },
      "max-comma": {
        "max": 5
      },
      "max-ten": {
        "max": 4
      },
      "max-kanji-continuous-len": {
        "max": 7
      },
      "arabic-kanji-numbers": true,
      "no-doubled-conjunction": true,
      "no-dropping-the-ra": true,
      "no-doubled-particle": true,
      "no-nfd": true,
      "no-invalid-control-character": true,
      "no-zero-width-spaces": true,
      "no-exclamation-question-mark": false,
      "no-hankaku-kana": true,
      "ja-no-weak-phrase": false,
      "ja-no-successive-word": true,
      "ja-no-abusage": true,
      "ja-no-redundant-expression": true,
      "ja-unnatural-alphabet": true,
      "no-unmatched-pair": true
    },
    "preset-ja-spacing": {
      "ja-space-between-half-and-full-width": {
        "space": "always"
      },
      "ja-space-after-exclamation": false,
      "ja-space-after-question": false,
      "ja-no-space-between-full-width": true,
      "ja-nakaguro-or-halfwidth-space-between-katakana": true,
      "ja-no-space-around-parentheses": true,
      "ja-space-around-code": {
        "before": true,
        "after": true
      }
    },
    "no-doubled-joshi": {
      "min_interval": 1,
      "strict": false,
      "allow": ["も", "や", "にも"]
    },
    "ja-no-mixed-period": {
      "allowPeriodMarks": [":", "。"],
      "allowEmojiAtEnd": false,
      "forceAppendPeriod": false
    },
    "prh": false,
    "@textlint-ja/preset-ai-writing": {
      "allow-hyped-expression": false,
      "hyped-adverb": true,
      "no-unnatural-alphabet": true,
      "no-unnatural-english": true,
      "overly-particles": true,
      "overly-passive-voice": true,
      "overly-politeness": true,
      "overly-long-sentence": true
    }
  }
}